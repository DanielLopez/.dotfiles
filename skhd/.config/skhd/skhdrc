# Changing Windows Focus
ctrl - j : yabai -m window --focus south 
ctrl - k : yabai -m window --focus north 
ctrl - h : yabai -m window --focus west 
ctrl - l : yabai -m window --focus east

# change focus between display (left and right)
shift + ctrl - h: yabai -m display --focus west
shift + ctrl - l: yabai -m display --focus east

# Moving Windows
ctrl + alt - j : yabai -m window --swap south 
ctrl + alt - k : yabai -m window --swap north 
ctrl + alt - h : yabai -m window --swap west 
ctrl + alt - l : yabai -m window --swap east 

#Moving windows between displays
shift + ctrl + alt - h : yabai -m window --display west | yabai -m display --focus west
shift + ctrl + alt - l : yabai -m window --display east | yabai -m display --focus east

# rotate layout clockwise
ctrl - r : yabai -m space --rotate 270

# flip along y-axis
ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
ctrl - x : yabai -m space --mirror x-axis

# toggle window float
ctrl - t : yabai -m window --toggle float --grig 4:4:1:1:2:2

# maximize a window
ctrl - m : yabai -m window --toggle zoom-fullscreen

# toggle fullscreen for the current window
ctrl - n : yabai -m window --toggle split

# balance out tree of windows (resize to occupy same area) 
ctrl - e : yabai -m space --balance

